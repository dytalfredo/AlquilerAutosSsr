---
import Layout from "../layouts/Layout.astro";
import { app } from "../firebase/server";
import { getFirestore } from "firebase-admin/firestore";

interface Termino {
    nombre: string;
    palabras: string[];
    definicion: string;
    area: string;
    etimologia: string;
    aÃ±o: string;
    id: string;
    fecha: number;
}

const db = getFirestore(app);
const terminoRef = db.collection("terminos");

const terminosSnapshot = await terminoRef.get();
const terminos = terminosSnapshot.docs.map((doc) => ({
    id: doc.id,
    ...doc.data(),
})) as Termino[];
---

<Layout title="Mis amigos">
    <div class="w-10/12">
        <h1 class="text-3xl text-center font-bold">Glosario</h1>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {
                terminos.map((termino) => (
                    <div class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{`${termino.nombre} (${termino.fecha})`}</h5>
                        <p class="font-normal text-gray-700 dark:text-gray-400">
                            {termino.definicion}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</Layout>

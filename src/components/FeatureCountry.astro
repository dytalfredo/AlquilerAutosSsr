---
interface Props {
    title?: string;
    sTitle1?: string;
    sTitle2?: string;
    sTitle3?: string;
    text1: string;
    text2: string;
    text3: string;
    sub: string;
}

const { title, sub, sTitle1, sTitle2, sTitle3, text1, text2, text3 } =
    Astro.props;
---

<div class="min-h-screen p-4">
    <div class="container mx-auto pt-12 pb-20">
        <h1 class="text-4xl font-bold text-gray-800 text-center mb-8">
            ¿Por qué estudiar y trabajar en {title}?
        </h1>
        <p class="text-gray-700 text-lg text-center mb-12">
            {sub}
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-white rounded-lg shadow-lg p-8">
                <h2 class="text-xl font-bold text-gray-800 mb-4 tracking-wider">
                    {sTitle1}
                </h2>
                <p class="text-gray-700">
                    {text1}
                </p>
            </div>
            <div class="bg-white rounded-lg shadow-lg p-8">
                <h2 class="text-xl font-bold text-gray-800 mb-4 tracking-wider">
                    {sTitle2}
                </h2>
                <p class="text-gray-700">
                    {text2}
                </p>
            </div>
            <div class="bg-white rounded-lg shadow-lg p-8">
                <h2 class="text-xl font-bold text-gray-800 mb-4 tracking-wider">
                    {sTitle3}
                </h2>
                <p class="text-gray-700">
                    {text3}
                </p>
            </div>
        </div>
    </div>
</div>
<style>
    h1 {
        font-family: "Abril Fatface", system-ui;
    }
</style>

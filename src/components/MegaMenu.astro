<style>
    strong {
        font-weight: 900;
        text-shadow: 3px 2px 5px #061b33;
    }
    /* #Mega Menu Styles
        –––––––––––––––––––––––––––––––––––––––––––––––––– */
    .mega-menu {
        z-index: -10;
        left: 0;
        position: absolute;
        text-align: left;
        width: 100%;
        opacity: 0;
        transition: all 0.2s ease-in-out;
        top: 80%;
    }

    /* #hoverable Class Styles
        –––––––––––––––––––––––––––––––––––––––––––––––––– */
    .hoverable {
        position: static;
    }

    .hoverable > a:after {
        content: "\25BC";
        font-size: 10px;
        padding-left: 6px;
        position: relative;
        top: -1px;
    }

    .hoverable:hover .mega-menu {
        opacity: 1;
        top: 100%;
        z-index: 50;
    }
</style>

---
interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<section
    class="p-8 mt-10 max-w-md bg-lime-600 text-gray-50 rounded-lg shadow-lg"
    id="siguiente-seccion"
>
    <h2
        class="text-4xl text-gray-50 font-semibold text-center mb-4 tracking-wider"
    >
        {title}
    </h2>
    <slot />
</section>
<style>
    h2 {
        text-shadow: 4px 4px 2px rgba(4, 39, 20, 0.6);
    }
</style>

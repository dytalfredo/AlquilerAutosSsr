---
import { Icon } from "astro-icon/components";
interface Props {
    title?: string;
    icon?: string;
    src?: string;
}
const { title, icon, src } = Astro.props;
---

<a
    class="block rounded-xl border place-content-center text-center border-lime-200 p-4 shadow-sm hover:border-lime-600 hover:ring-1 hover:ring-gray-200 focus:outline-none focus:ring"
    href={src}
>
    <span class="inline-block rounded-lg bg-gray-50 p-3">
        <Icon name={icon} class="text-6xl min-w-14 mr-0 flag" />
    </span>

    <h3 class="mt-2 font-bold">{title}</h3>
</a>

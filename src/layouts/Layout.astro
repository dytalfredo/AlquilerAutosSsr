---
import Header from "../components/Header.astro";

interface Props {
	title: string;
	url_canonical?: string;
	og_title?: string;
	og_descrip?: string;
	og_img?: string;
	og_img_alt?: string;
}

const { title, url_canonical, og_title, og_descrip, og_img, og_img_alt } =
	Astro.props;

import "@fontsource/lato";
import "@fontsource/abril-fatface";
import Footer from "../components/Footer.astro";
import Adverten from "../components/Adverten.astro";
import Formulario2 from "../components/Formulario2.astro";
---

<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<meta name="description" content={og_descrip} />
		<meta name="viewport" content="width=device-width" />

		<meta name="theme-color" content="#09f" />
		<link rel="canonical" href={url_canonical} />

		<meta name="robots" content="index" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<meta property="og:url" content={url_canonical} />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={og_title} />
		<meta property="og:description" content={og_descrip} />
		<meta
			property="og:image"
			content=`https://latamstudyvisa.com${og_img}`
		/>
		<meta property="og:image:alt" content={og_img_alt} />
		<meta property="og:image:width" content="400" />
		<meta property="og:image:height" content="400" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content="latamstudyvisa.com" />
		<meta property="twitter:url" content={url_canonical} />
		<meta name="twitter:title" content={og_title} />
		<meta name="twitter:description" content={og_descrip} />
		<meta
			name="twitter:image"
			content=`https://latamstudyvisa.com${og_img}`
		/>
		<meta property="twitter:image:alt" content={og_img_alt} />
		<!-- GetResponse Analytics -->
		<script is:inline type="text/javascript">
			(function (m, o, n, t, e, r, _) {
				m["__GetResponseAnalyticsObject"] = e;
				m[e] =
					m[e] ||
					function () {
						(m[e].q = m[e].q || []).push(arguments);
					};
				r = o.createElement(n);
				_ = o.getElementsByTagName(n)[0];
				r.async = 1;
				r.src = t;
				r.setAttribute("crossorigin", "use-credentials");
				_.parentNode.insertBefore(r, _);
			})(
				window,
				document,
				"script",
				"https://an.gr-wcon.com/script/5004c56b-8df4-4b5c-b814-023e9be75190/ga.js",
				"GrTracking",
			);
		</script>
		<!-- End GetResponse Analytics -->
	</head>
	<body>
		<Adverten />
		<Header />

		<slot />
		<div class="cNZMoQ"></div>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		.cNZMoQ {
			display: none !important;
		}
	}
	.cNZMoQ {
		display: none !important;
	}
	a {
		text-decoration: none;
	}
	/*
  1. Use a more-intuitive box-sizing model.
*/
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	/*
  2. Remove default margin
*/
	* {
		margin: 0;
	}
	/*
  Typographic tweaks!
  3. Add accessible line-height
  4. Improve text rendering
*/
	body {
		line-height: 1.5;
		-webkit-font-smoothing: antialiased;
	}
	/*
  5. Improve media defaults
*/
	img,
	picture,
	video,
	canvas,
	svg {
		display: block;
		max-width: 100%;
	}
	/*
  6. Remove built-in form typography styles
*/
	input,
	button,
	textarea,
	select {
		font: inherit;
	}
	/*
  7. Avoid text overflows
*/
	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		overflow-wrap: break-word;
	}
	/*
  8. Create a root stacking context
*/
	#root,
	#__next {
		isolation: isolate;
	}
	html {
		font-family: "Lato", sans-serif;
		background: var(--whiteBlue);
		scroll-behavior: smooth;
	}
	body {
		position: relative;
		overflow-x: hidden;
		background-color: white;
		transition: all 0.3s ease-out;
	}

	/* TEXTOS */
	h1,
	h2 {
		font-weight: 800;

		color: var(--whiteBlue);
	}
	h2 {
		color: var(--black);
		font-size: 2rem;
		font-family: "Abril Fatface", system-ui;

		text-align: center;
	}

	h1 {
		font-size: 2rem;
	}
	@media (min-width: 600px) {
		body {
		}
	}

	/*responsive*/
</style>
